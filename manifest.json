{
  "manifest_version": 3,
  "name": "稍后阅读",
  "version": "1.0",
  "description": "一个简单的稍后阅读插件，支持右键添加链接和拖拽排序",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "contextMenus"
  ],
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "*://*/*"
  ],
  "web_accessible_resources": [{
    "resources": ["fonts/*"],
    "matches": ["<all_urls>"]
  }]
}